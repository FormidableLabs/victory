{
  "extends": ["formidable/configurations/es6-react", "prettier"],
  "env": { "mocha": true },
  "plugins": ["mocha"],
  "rules": {
    "react/sort-comp": "off",
    "mocha/no-exclusive-tests": 2,
    "no-magic-numbers": 0,
    "max-statements": 0,
    "import/no-unresolved": 0
  },
  "globals": { "expect": false }
}
